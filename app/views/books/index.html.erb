<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.notes.count %></td>
        <td><%= link_to 'Show', book %></td>
        <% if not book.is_global? %>
          <td><%= link_to 'Rename', edit_book_path(book) %></td>
        <% end %>
        <td><%= link_to 'View notes', book_notes_path(book) %></td>
        <td><%= button_to 'Export notes', export_book_path(book), method: :put %></td>
        <% if not book.is_global? %>
          <td><%= button_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
          <td><%= button_to 'Delete notes', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New Book', new_book_path %></button>
<button><%= button_to 'Export all books', export_all_books_path, method: :put %></button>
