<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

  <title>Annotator!</title>
  <style>
    .home_style{
        font-size: 1.3rem; color: black; text-decoration-line: none;
    }
    .button_login{
        font-size: 1rem; color: black; text-decoration-line: none;
    }
    .button_exit{
        font-size: 1rem; color: black; text-decoration-line: none;
        background: transparent;
        border: none;
    }
    .show_book_button{
        font-size: 1.5rem; text-decoration-line: none; color: brown; border: solid 4px; border-color: gray; box-shadow: 1px 1px;
    }
  </style>
</head>
<body>

<!-- Optional JavaScript; choose one of the two! -->

<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>

<!-- Option 2: Separate Popper and Bootstrap JS -->
<!--
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
-->

<nav class="navbar" style="background-color: burlywood; height: 3rem;">
  <ul>
    <%= link_to 'Home ', root_path, class:"home_style"%>
  </ul>
  <% if user_signed_in? %>
    <ul class="align-content-end">
      <%= button_to 'Log out', destroy_user_session_path, method: :delete, class:"button_exit" %>
    </ul>
  <% else %>
    <ul class="align-content-end">
      <%= link_to 'Sign In ', new_user_session_path, class:"button_login" %>
      |
      <%= link_to 'Sign Up', new_user_registration_path, class:"button_login" %>
    </ul>
  <% end %>
  <% link_to 'Sign out', destroy_user_session_path, method: :delete %>
</nav>
<p class="notice"><%= notice %></p>
<!--    <p class="alert"><%#= alert %></p>-->
<%= yield %>
</body>
</html>